{
  "name": "financial-backend",
  "version": "1.0.0",
  "description": "Personal finance and expense recording application",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write '**/*.{js,json,md}'",
    "test": "echo \"Error: no test specified\" && exit 1"
