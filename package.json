  "keywords": [
    "financial",
    "personal",
    "expense",
    "investment"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mateusxis/financial-xis.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/mateusxis/financial-xis/issues"
  },
  "homepage": "https://github.com/mateusxis/financial-xis#readme",
  "license": "MIT",
  "lint-staged": {
    "*.(gql|css|scss|json|yml|md)": [
